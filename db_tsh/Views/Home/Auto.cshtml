@model db_tsh.Models.Vehicle
@{
    ViewData["Title"] = "Auto Policy";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title">Buy Auto Policy</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Auto" method="post">
                        <div class="form-group">
                            <label for="startDate">Start Date</label>
                            <input type="date" class="form-control" id="startDate" name="startDate" required>
                        </div>
                        <div class="form-group">
                            <label for="type">Vehicle Type</label>
                            <input type="text" class="form-control" id="type" name="type" placeholder="Enter vehicle type" required>
                        </div>
                        <div class="form-group">
                            <label for="marka">Vehicle Make</label>
                            <input type="text" class="form-control" id="marka" name="marka" placeholder="Enter vehicle make" required>
                        </div>
                        <div class="form-group">
                            <label for="model">Vehicle Model</label>
                            <input type="text" class="form-control" id="model" name="model" placeholder="Enter vehicle model" required>
                        </div>
                        <div class="form-group">
                            <label for="License_Plate">License Plate</label>
                            <input type="text" class="form-control" id="License_Plate" name="License_Plate" placeholder="Enter license plate" required>
                        </div>
                        @*<div class="form-group">
                                <label for="policyId">Policy ID</label>
                                <input type="number" class="form-control" id="policyId" name="policyId" placeholder="Enter policy ID" required>
                            </div>*@
                        <button type="submit" class="btn btn-primary btn-block">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

